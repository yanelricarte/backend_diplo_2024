  <input type="text" id="nombre" name="nombre" value="{{personaje.nombre}}" required>
<br><br>
  <label for="edad">Edad:</label>
  <input type="number" id="edad" name="edad" value="{{personaje.edad}}" required>
<br><br>

  <label for="casa">Casa:</label>
  <input type="text" id="casa" name="casa" value="{{personaje.casa}}" required>
<br><br>

  <label for="rol">Rol:</label>
  <input type="text" id="rol" name="rol" value="{{personaje.rol}}" required>
<br><br>
<!-- 
  <label for="imagen">Imagen:</label>
